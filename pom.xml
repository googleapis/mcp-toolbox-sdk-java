<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.google.cloud</groupId>
        <artifactId>sdk-platform-java-config</artifactId>
        <version>3.55.1</version>
    </parent>

    <groupId>com.google.cloud.mcp</groupId>
    <artifactId>mcp-toolbox-sdk-java</artifactId>
    <version>0.1.1-SNAPSHOT</version><!-- {x-version-update:mcp-toolbox-sdk-java:current} -->
    <name>MCP Toolbox SDK for Java</name>
    <description>Java client library for the Model Context Protocol (MCP) Toolbox.</description>
    <url>https://github.com/googleapis/mcp-toolbox-sdk-java</url>

    <licenses>
        <license>
            <name>Apache-2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>senseai-eco</id>
            <name>SenseAI Ecosystems Team</name>
            <organization>Google</organization>
            <organizationUrl>https://github.com/orgs/googleapis/teams/senseai-eco</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/googleapis/mcp-toolbox-sdk-java.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/googleapis/mcp-toolbox-sdk-java.git</developerConnection>
        <url>https://github.com/googleapis/mcp-toolbox-sdk-java</url>
    </scm>

    <properties>
        <maven.compiler.release>17</maven.compiler.release>
        <jackson.version>2.15.2</jackson.version>
        <google.auth.version>1.23.0</google.auth.version>
        <animal.sniffer.skip>true</animal.sniffer.skip>
        <checkstyle.header.file>java.header</checkstyle.header.file>
    </properties>

    <dependencies>
        <!-- JSON Processing -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>

        <!-- Google Auth for Cloud Run / ADC -->
        <dependency>
            <groupId>com.google.auth</groupId>
            <artifactId>google-auth-library-oauth2-http</artifactId>
            <version>${google.auth.version}</version>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.10.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>5.5.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.spotify.fmt</groupId>
                <artifactId>fmt-maven-plugin</artifactId>
                <version>2.28</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
